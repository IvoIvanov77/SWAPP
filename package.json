{
  "name": "swapp",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "apollo-boost": "^0.4.4",
    "graphql": "^14.5.8",
    "lint-staged": "^9.4.1",
    "prettier": "^1.18.2",
    "react": "^16.10.2",
    "react-apollo": "^3.1.2",
    "react-dom": "^16.10.2",
    "react-router-dom": "^5.1.2",
    "react-scripts": "3.2.0",
    "husky": "^3.0.8",
    "cross-env": "^6.0.2"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "lint": "eslint src/**/*.js src/**/*.jsx",
    "format": "prettier --write src/**/*.{js,jsx,json,css,scss}",
    "ci": "npm run lint && cross-env CI=true"
  },
  "husky": {
    "hooks": {
      "pre-commit": "cross-env CI=true lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{js,jsx}": [
      "prettier --write",
      "eslint --max-warnings=0",
      
      "git add"
    ]
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "prettier": {
    "trailingComma": "all",
    "tabWidth": 2,
    "semi": true,
    "singleQuote": true
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },

  
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/index.js",
      "!src/stories/**/*.js",
      "!src/utils.js",
      "!src/timers/**/*.js",
      "!src/basic-mock/**/*.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 100
      }
    }
  },

  "comments": {
    "src/**/*.{js,jsx}":"npm test --bail --findRelatedTests",
    "ci": "npm test --coverage"
  }
}
